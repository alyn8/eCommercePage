<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Week92.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Week92"
    Shell.FlyoutBehavior="Disabled"
    Title="Week92">

    <TabBar>
        
        <Tab Title="Home" Icon="computer_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>
        </Tab>
        
        <Tab Title="Store" Icon="home_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:Page2}" Route="Page2"/>
        </Tab>
        
        <Tab Title="Shop" Icon="settings_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:Page3}" Route="Page3"/>
        </Tab>
        
        <Tab Title="Payment" Icon="card_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:Page4}" Route="Page4"/>
        </Tab>

    </TabBar>


</Shell>
